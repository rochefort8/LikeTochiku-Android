<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tochiku85.liketochiku.QuizQuestionActivity" >

    <TextView
        android:id="@+id/quiz_question_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="結果"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/text_quiz_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/quiz_question_result"
        android:paddingTop="10sp"
        android:text="答え"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/text_answer_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_quiz_answer"
        android:paddingTop="10sp"
        android:text="説明"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/image_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_quiz_answer_next"
        android:layout_alignEnd="@+id/button_quiz_answer_next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_quiz_answer_next"
        android:layout_below="@+id/text_answer_description"
        android:paddingTop="10sp"
        android:src="@drawable/memories1" />

    <Button
        android:id="@+id/button_quiz_answer_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/quiz_question_result"
        android:text="止める" />

    <Button
        android:id="@+id/button_quiz_answer_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_quiz_answer"
        android:layout_alignRight="@+id/text_quiz_answer"
        android:layout_alignTop="@+id/button_quiz_answer_stop"
        android:layout_toEndOf="@+id/quiz_question_result"
        android:layout_toRightOf="@+id/quiz_question_result"
        android:text="次へ >>" />

</RelativeLayout>
